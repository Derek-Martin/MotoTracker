<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="10">


    <Button
        android:id="@+id/bike_expand_button"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:drawableStart="@drawable/ic_arrow_down"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        style="@style/AppTheme.Button.Bike"
        android:background="@drawable/ripple_left"
        android:backgroundTint="@color/colorSubCategory"
        android:layout_weight="9"/>


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/add_button"
        android:layout_width="40sp"
        android:layout_height="match_parent"
        android:layout_gravity="end|center|center_horizontal|center_vertical"
        android:layout_weight="1"
        android:background="@drawable/ripple_right"
        android:backgroundTint="@color/colorSubCategory"
        android:src="@drawable/ic_plus" />

</LinearLayout>